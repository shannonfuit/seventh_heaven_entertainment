<%= form_with(model: [:admin, event], html: {class: "form-horizontal"}) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <% unless event.published? %>
    <div class="form-group">
      <%= form.label :price, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :price, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :starts_on, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.datetime_field :starts_on, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :ends_on, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.datetime_field :ends_on, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :location, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.text_field :location, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :capacity, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= form.number_field :capacity, class: "form-control" %>
      </div>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.rich_text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
