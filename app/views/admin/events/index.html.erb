<p style="color: green"><%= notice %></p>

<h1>Calendar</h1>

<div id="events">
  <% @events.each do |event| %>
    <div class="col-md-4 mb-4">
      <%= render layout: "shared/event_card", locals: {event: event} do %>
        <p><%= link_to "Show this event", admin_event_path(event) %></p>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New event", new_admin_event_path %>
